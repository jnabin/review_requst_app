@model review_request_app.Models.ClientViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>@Model.BusinessName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form  enctype="multipart/form-data" asp-controller="Client" asp-action="details"
      method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="d-none form-group">
                <label asp-for="BusinessName" class="control-label"></label>
                <input asp-for="BusinessName" class="form-control" />
                <span asp-validation-for="BusinessName" class="text-danger"></span>
            </div> 
            <div class="d-none form-group">
                <label asp-for="LogoPath" class="control-label"></label>
                <input asp-for="LogoPath" class="form-control" />
                <span asp-validation-for="LogoPath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GoogleReviewLink" class="control-label"></label>
                <input asp-for="GoogleReviewLink" class="form-control" />
                <span asp-validation-for="GoogleReviewLink" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="FacebookReviewLink" class="control-label"></label>
                <input asp-for="FacebookReviewLink" class="form-control" />
                <span asp-validation-for="FacebookReviewLink" class="text-danger"></span>
            </div>
             <div class="form-group row">
               <label asp-for="Logo" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input asp-for="Logo" class="form-control custom-file-input">
                        <label class="custom-file-label">Choose File...</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller = "Home">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
